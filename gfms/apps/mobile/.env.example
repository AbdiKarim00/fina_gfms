# API Configuration
API_BASE_URL=http://localhost:8000/api/v1
API_TIMEOUT=30000

# App Configuration
APP_NAME="GFMS Mobile"
APP_ENV=development
APP_DEBUG=true

# Authentication
AUTH_TOKEN_KEY=auth_token
REFRESH_TOKEN_KEY=refresh_token
TOKEN_EXPIRY_KEY=token_expiry

# Map Configuration
MAPBOX_ACCESS_TOKEN=
DEFAULT_MAP_CENTER_LAT=-1.2921  # Nairobi coordinates
DEFAULT_MAP_CENTER_LNG=36.8219
DEFAULT_MAP_ZOOM=12

# Location Services
LOCATION_UPDATE_INTERVAL=30  # seconds
LOCATION_ACCURACY=high

# Logging
ENABLE_CONSOLE_LOGS=true
ENABLE_FILE_LOGS=true

# Feature Flags
ENABLE_OFFLINE_MODE=true
ENABLE_LOCATION_TRACKING=true
ENABLE_PUSH_NOTIFICATIONS=true

# Version
APP_VERSION=1.0.0
BUILD_NUMBER=1
